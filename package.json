{
	"name": "@natlibfi/melinda-record-import-commons",
	"description": "Shared modules for microservices of Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-commons",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-commons/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-commons.git"
	},
	"license": "AGPL-3.0+",
	"version": "3.1.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=8"
	},
	"bin": {
		"healthz": "./dist/health-check.js"
	},
	"scripts": {
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check || exit 0",
		"lint": "eslint --fix src",
		"test": "npm run lint",
		"build:transpile": "babel src --source-maps --delete-dir-on-start --out-dir=dist",
		"build": "npm run build:transpile && npm run check-deps",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=test nodemon -w src --exec 'npm test'",
		"watch:dev": "nodemon -w src --exec 'npm run lint && npm run build:transpile'"
	},
	"dependencies": {
		"@babel/core": "^7.2.0",
		"@natlibfi/melinda-commons": "^4.0.3",
		"amqplib": ">=0.5.3 <1.0.0",
		"http-status": "^1.3.1",
		"node-fetch": "^2.3.0",
		"ora": "^3.0.0",
		"rimraf": "^2.6.2",
		"yargs": "^12.0.5"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.0",
		"@babel/plugin-syntax-dynamic-import": "^7.2.0",
		"@babel/preset-env": "^7.2.0",
		"babel-eslint": "^10.0.1",
		"babel-plugin-dynamic-import-node": "^2.2.0",
		"cross-env": "^5.1.1",
		"eslint": "^5.9.0",
		"eslint-config-xo": ">=0.25.1 <1.0.0",
		"eslint-plugin-import": "^2.14.0",
		"nodemon": "^1.18.10",
		"npm-check": "^5.9.0"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "8"
					}
				}
			]
		],
		"plugins": [
			"@babel/plugin-syntax-dynamic-import",
			"dynamic-import-node"
		]
	}
}
