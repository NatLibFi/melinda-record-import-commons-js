{
	"name": "@natlibfi/melinda-record-import-commons",
	"description": "Shared modules for microservices of Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-commons",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-commons/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-commons.git"
	},
	"license": "AGPL-3.0+",
	"version": "8.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"prepare": "npm run build",
		"check-deps": "npm-check || exit 0",
		"lint": "eslint --fix src",
		"test": "npm run lint",
		"build": "babel src --source-maps --delete-dir-on-start --out-dir=dist",
		"build:dev": "npm run build && npm run check-deps",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=test nodemon -w src --exec 'npm test'",
		"watch:dev": "nodemon -w src --exec 'npm run lint && npm run build:transpile'"
	},
	"dependencies": {
		"@babel/core": "^7.10.2",
		"@natlibfi/melinda-commons": "^7.3.3",
		"amqplib": "^0.5.6",
		"http-status": "^1.4.2",
		"moment": "^2.26.0",
		"node-fetch": "^2.3.0",
		"ora": "^3.0.0",
		"rimraf": "^2.7.1",
		"uuid": "^3.4.0",
		"yargs": "^13.3.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.1",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.10.2",
		"babel-eslint": "^10.1.0",
		"babel-plugin-dynamic-import-node": "^2.3.3",
		"cross-env": "^5.2.1",
		"eslint": "^6.8.0",
		"eslint-config-xo": "^0.31.0",
		"eslint-plugin-import": "^2.21.2",
		"nodemon": "^1.19.4",
		"npm-check": "^5.9.2"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "12"
					}
				}
			]
		],
		"plugins": [
			"@babel/plugin-syntax-dynamic-import",
			"dynamic-import-node"
		]
	}
}
