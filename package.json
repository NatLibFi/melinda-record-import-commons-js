{
	"name": "@natlibfi/melinda-record-import-commons",
	"description": "Shared modules for microservices of Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-commons",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-commons/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-commons.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.7.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint --fix src",
		"test": "npm run lint",
		"clean": "rimraf build dist",
		"build:transpile": "babel src --source-maps --out-dir=dist",
		"build": "npm run clean && npm run build:transpile && npm run check-deps",
		"watch": "cross-env DEBUG=1 NODE_ENV=test chokidar src -c 'npm test && babel-node src/index.js'"
	},
	"dependencies": {
		"amqplib": ">=0.5.3 <1.0.0",
		"moment": "^2.22.2",
		"node-fetch": "^2.3.0",
		"winston": "^3.1.0"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-eslint": "^10.0.1",
		"babel-preset-env": "^1.6.1",
		"babel-register": "^6.26.0",
		"chokidar-cli": "^1.2.0",
		"codeclimate-test-reporter": ">=0.5.1 <1.0.0",
		"cross-env": "^5.1.1",
		"eslint": "^5.9.0",
		"eslint-config-xo": ">=0.25.1 <1.0.0",
		"eslint-plugin-import": "^2.14.0",
		"mocha": "^5.2.0",
		"npm-check": "^5.9.0",
		"rimraf": "^2.6.2"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		}
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"node": "8"
					}
				}
			]
		]
	}
}
